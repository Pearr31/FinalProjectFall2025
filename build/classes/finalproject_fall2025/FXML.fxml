                        <Font size="15.0" />
                     </font>
                  </TextArea>
                  <TextArea fx:id="editInitialSpeed" layoutX="91.0" layoutY="6.0" prefHeight="48.0" prefWidth="135.0" promptText="Add initial speed" wrapText="true">
