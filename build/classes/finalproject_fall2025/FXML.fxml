                        <Canvas fx:id="simulationCanvas" height="470.0" layoutX="2.0" layoutY="2.0" width="685.0" />
                    </children>
                    <BorderPane.margin>
                        <Insets left="50.0" right="30.0" />
                    </BorderPane.margin>
                </Pane>
            </center>
            <top>
                <Pane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox layoutX="373.0" prefHeight="100.0" prefWidth="250.0" spacing="10.0">
                            <children>
                                <Label fx:id="finalVelocityLabel" prefHeight="40.0" prefWidth="250.0" text="Final Velocity:">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                </Label>
                                <Label fx:id="flightTimeLabel" prefHeight="40.0" prefWidth="250.0" text="Flight Time:">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                </Label>
                            </children>
                        </VBox>
                        <VBox layoutX="623.0" prefHeight="100.0" prefWidth="250.0" spacing="10.0">
                            <children>
                                <Label fx:id="rangeLabel" prefHeight="40.0" prefWidth="250.0" text="Range:">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="maxHeightLabel" prefHeight="40.0" prefWidth="250.0" text="Max Height:">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </top>
        </BorderPane>
        <Label fx:id="titleLabel" text="2D  Projectile Motion Simulator">
            <font>
                <Font name="Comic Sans MS" size="24.0" />
            </font>
            <padding>
                <Insets left="5.0" />
            </padding>
        </Label>
    </children>
</AnchorPane>
