                     <font>
                        <Font size="36.0" />
                     </font>
                  </Button>
                  <Label fx:id="rangeLabel" layoutX="378.0" layoutY="49.0" prefHeight="27.0" prefWidth="77.0" text="Range:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </bottom>
      </BorderPane>
      <Label fx:id="titleLabel" text="2D  Projectile Motion Simulator">
         <font>
            <Font name="Comic Sans MS" size="27.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
