                <Pane fx:id="bottomPane" prefHeight="125.0" prefWidth="200.0" style="-fx-background-color: lightgrey;" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="simulationStartButton" layoutX="677.0" layoutY="24.0" mnemonicParsing="false" onAction="#handleSimulationStart" prefWidth="200.0" style="-fx-background-color: lime;" text="Start" textFill="WHITE">
                            <font>
                                <Font size="36.0" />
                            </font>
                        </Button>
                        <Button fx:id="simulationResetButton" layoutX="462.0" layoutY="24.0" mnemonicParsing="false" onAction="#handleSimulationReset" prefWidth="200.0" style="-fx-background-color: red;" text="Reset" textFill="WHITE">
                            <font>
                                <Font size="36.0" />
                            </font>
                        </Button>
                  <Label fx:id="canvasHeightLabel" layoutX="14.0" layoutY="24.0" prefHeight="40.0" prefWidth="250.0" text="Canvas Height:">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
                    </children>
                </Pane>
            </bottom>
            <right>
                <VBox prefHeight="200.0" prefWidth="130.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextArea fx:id="editHeightTextArea" prefHeight="48.0" prefWidth="110.0" promptText="Add height (m)" wrapText="true">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets right="5.0" />
                            </VBox.margin>
                        </TextArea>
                        <TextArea fx:id="editInitialSpeed" prefHeight="48.0" prefWidth="168.0" promptText="Add initial speed (m/s)" wrapText="true">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets right="5.0" />
                            </VBox.margin>
                        </TextArea>
                        <Label text="Add launch Angle">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="angleValueLabel" text="Angle : " />
