                        <Rectangle fx:id="heightRectangle" arcHeight="5.0" arcWidth="5.0" height="200.0" layoutX="610.0" layoutY="270.0" stroke="BLACK" strokeType="INSIDE" width="75.0">
                     <fill>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="0.9736841917037964" green="0.016228070482611656" />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="0.5714547038078308" green="0.6973684430122375" blue="0.31962719559669495" />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </fill></Rectangle>
                  <Rectangle fx:id="canonHead" arcHeight="5.0" arcWidth="5.0" fill="#595959" height="30.0" layoutX="642.0" layoutY="237.0" stroke="BLACK" strokeType="INSIDE" width="10.0" />
