               <children>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" blendMode="MULTIPLY" fill="#ff681f" height="235.0" layoutX="508.0" layoutY="228.0" stroke="BLACK" strokeType="INSIDE" width="137.0" />
