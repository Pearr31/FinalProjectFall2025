                  <Insets bottom="5.0" left="700.0" right="5.0" top="5.0" />
               </BorderPane.margin>
               <children>
                  <Label fx:id="flightTimeLabel" prefHeight="37.0" prefWidth="139.0" text="Flight Time:">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
                  <Label fx:id="finalVelocityLabel" prefHeight="37.0" prefWidth="152.0" text="Final Velocity:">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </top>
         <left>
            <VBox prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="maxHeightLabel" prefHeight="27.0" prefWidth="124.0" text="Max Height:">
                     <VBox.margin>
                        <Insets left="10.0" top="200.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </left>
         <bottom>
            <Pane fx:id="bottomPane" prefHeight="125.0" prefWidth="200.0" BorderPane.alignment="CENTER">
